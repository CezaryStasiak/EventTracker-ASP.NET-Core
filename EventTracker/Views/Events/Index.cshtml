@model List<EventTracker.Models.EventModel>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/main.css" />
    <title>EventTracker</title>
</head>

<body>
    <section id="Calendar">
        <div class="container">
            <div class="row">
                <div class="col text-center" id="year">
                    <div class="btn btn-info">@DateTime.Now.Year</div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col text-center" id="months">
                        @{
                            string[] monthName = {"January", "February", "March", "April", "May", "June",
                                            "July", "August", "September", "October", "November", "December" };

                            for (int i = 1; i <= 12; i++)
                            {
                                <div class="btn btn-warning month" id="month@(@i)button">@monthName[i - 1]</div>
                            }
                        }
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col text-center" id="days">
                        @{
                            for (int v = 1; v <= 12; v++)
                            {
                                <div id="month@(v)days">
                                    @{
                                        for (int i = 1; i <= DateTime.DaysInMonth(DateTime.Now.Year, v); i++)
                                        {
                                            <div class="btn btn-info day" id="month@(v)day@(i)button">@i</div>
                                        }
                                    }
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="container">
            <div class="row">
                @Html.Partial("/Views/Partials/_Events.cshtml", Model)
            </div>
        </div>
    </section>
    <script src="~/js/main.js"></script>
</body>
</html>
