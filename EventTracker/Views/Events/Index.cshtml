@using Newtonsoft.Json;
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/main.css" />
    <title>Index</title>
</head>

<body>
    <script>
        var model = '@Html.Raw(Json.Serialize(Model))';
        var events = JSON.parse(model);
    </script>
    <section id="Calendar">
        <div class="container">
            <div class="row">
                <div class="col text-center" id="year">
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col text-center" id="months">
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col text-center" id="days">
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="container">
            <div class="row">
                <div class="media eventsRows">
                    <div class="media-body">
                        <h4 class="media-heading eventName" id="eveName"></h4>
                        <p id="eveDesc"></p>
                        <div class="media-right"><p class="eventDate" id="eveDate"></p></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/js/main.js"></script>
    <script>
        document.getElementById("eveName").innerHTML = events.value[0].title;
        document.getElementById("eveDesc").innerHTML = events.value[0].description;
        document.getElementById("eveDate").innerHTML = events.value[0].date.day + "/" + events.value[0].date.month + "/" + events.value[0].date.year;
    </script>
</body>
</html>
